<h1>Notícias</h1>

<table>
  <tr>
    <th style="width:100%">Título</th>
    <th colspan="3"></th>

  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.titulo %></td>
    <td><%= link_to 'Exibir', post,:class=>"link_bt" %></td>
    <td><%= link_to 'Editar', edit_post_path(post),:class=>"link_bt" %></td>
    <td><%= link_to 'Remover', post, :confirm => 'Tem certeza?', :method => :delete,:class=>"link_bt" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Escrever Notícia', new_post_path,:class=>"link_bt" %>
